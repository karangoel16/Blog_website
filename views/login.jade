extends layout
block content
	.main.container
		.row
			.col-md-6.col-md-offset-3
				.jumbotron
					form.form-signin(action="/login",method="post")
						h2.form-signin-heading Please sign in
						input.input-block-level.input-lg(type="text",name="username",placeholder="username")
						br
						br
						input.input-block-level.input-lg(type="password",name="password",placeholder="password")
						br
						br
						.input-group-btn
							button.btn.btn-large-btn-primary.btn-lg(type="submit") Login
						.input-group-btn
							button.btn.btn-large-btn-primary.btn-lg(type="button" onclick="location=href = '/sign-up'") Sign Up
	